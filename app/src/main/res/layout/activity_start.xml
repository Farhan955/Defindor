<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".Activities.Auth.StartActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="208dp"
        android:src="@drawable/img_logo"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_wallet"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="250dp"
        android:src="@drawable/img_wallet"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_new"
        app:layout_constraintStart_toStartOf="@+id/btn_new" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_new"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="14dp"
        android:onClick="btnNewAccount"
        android:text="New Account?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:theme="@style/algereya_medium"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btn_existing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_backgroundColor="#402C60"
        app:neumorph_shadowColorDark="#36132E"
        app:neumorph_shadowColorLight="#5A3054"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeWidth="0dp" />

    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_existing"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="80dp"
        android:onClick="btnExisting"
        android:text="Existing Account?"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:theme="@style/algereya_medium"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:neumorph_backgroundColor="#402C60"
        app:neumorph_shadowColorDark="#36132E"
        app:neumorph_shadowColorLight="#5A3054"
        app:neumorph_shadowElevation="3dp"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeWidth="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>