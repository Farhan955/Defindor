<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".Activities.Auth.AlmostDoneActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:onClick="ivBack"
        android:layout_marginStart="40dp"
        android:foreground="?actionBarItemBackground"
        android:layout_marginTop="78dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/_tv_create_account"
        style="@style/algereya_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Almost Done"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/iv_back"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <TextView
        android:id="@+id/_tv_choose"
        style="@style/robboto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:text="Chose 1 character and memorize it, you will need it to login: any letter, number or a symbol"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/_tv_create_account" />


    <TextView
        android:id="@+id/textView2"
        style="@style/robbotoLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:text="(Try not to use the first letter of your name or last name)"
        android:textColor="#80FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/_tv_choose"
        app:layout_constraintStart_toStartOf="@+id/_tv_choose"
        app:layout_constraintTop_toBottomOf="@+id/_tv_choose" />


    <EditText
        android:id="@+id/et_1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:maxLength="1"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/robboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please confirm"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/et_1" />


    <EditText
        android:id="@+id/et_2"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:maxLength="1"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/tv_confirm"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm" />


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnNext"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:onClick="btnNext"
        android:paddingStart="5dp"
        android:text="Next"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:theme="@style/algereya_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:neumorph_backgroundColor="#402C60"
        app:neumorph_shadowColorDark="#36132E"
        app:neumorph_shadowColorLight="#5A3054"
        app:neumorph_shadowElevation="2dp"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeWidth="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/btnNext"
        app:layout_constraintEnd_toEndOf="@+id/btnNext"
        app:layout_constraintTop_toTopOf="@+id/btnNext" />
</androidx.constraintlayout.widget.ConstraintLayout>