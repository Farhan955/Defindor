<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".Activities.Auth.SignInActivity2">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="78dp"
        android:foreground="?actionBarItemBackground"
        android:onClick="ivBack"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/_tv_create_account"
        style="@style/algereya_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Create a \nnew Account"
        android:textAllCaps="true"
        android:textColor="#33FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/iv_back"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />


    <TextView
        android:id="@+id/textView"
        style="@style/robbotoLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Single unique key"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/_tv_create_account"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="1"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/tv_forgot_key"
        style="@style/robbotoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:foreground="?selectableItemBackground"
        android:onClick="tvForgot"
        android:padding="3dp"
        android:text="Forgot my key?"
        android:textColor="#5E4099"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_1" />


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_next"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:onClick="btnNext"
        android:paddingStart="5dp"
        android:text="Next"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:theme="@style/algereya_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:neumorph_backgroundColor="#402C60"
        app:neumorph_shadowColorDark="#36132E"
        app:neumorph_shadowColorLight="#5A3054"
        app:neumorph_shadowElevation="2dp"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeWidth="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="@+id/btn_next"
        app:layout_constraintTop_toTopOf="@+id/btn_next" />
</androidx.constraintlayout.widget.ConstraintLayout>