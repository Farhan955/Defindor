<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    tools:context=".Activities.HomeActivity">

    <TextView
        android:id="@+id/tv_vaults"
        style="@style/algereya_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="70dp"
        android:text="Vaults"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_settings"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="28dp"
        android:foreground="?actionBarItemBackground"
        android:onClick="ivSettings"
        android:padding="3dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintBottom_toBottomOf="@+id/tv_vaults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_vaults" />


    <ImageView
        android:id="@+id/iv_person_add"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="15dp"
        android:padding="2dp"
        android:src="@drawable/ic_person_add"
        app:layout_constraintBottom_toBottomOf="@+id/iv_settings"
        app:layout_constraintEnd_toStartOf="@+id/iv_settings"
        app:layout_constraintTop_toTopOf="@+id/iv_settings" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_vaults"
        tools:layout_editor_absoluteX="25dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/img_vaults">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_binance2" />

            <TextView
                style="@style/robboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Binance"
                android:textAllCaps="true"

                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/roboto_light"
                android:text=" 0 active vaults"
                android:textColor="@color/white"
                android:textSize="8sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="26dp"
                android:src="@drawable/ic_msg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="50dp"
                android:text="(12)"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/img_vaults">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_coinbase" />

            <TextView
                style="@style/robboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Coinbase"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/roboto_light"
                android:text=" 0 active vaults"
                android:textColor="@color/white"
                android:textSize="8sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="26dp"
                android:src="@drawable/ic_msg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="50dp"
                android:text="(12)"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/img_vaults">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_ku" />

            <TextView
                style="@style/robboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="Kucoin"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/roboto_light"
                android:text=" 0 active vaults"
                android:textColor="@color/white"
                android:textSize="8sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="26dp"
                android:src="@drawable/ic_msg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="50dp"
                android:text="(12)"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/img_vaults">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_ftx" />

            <TextView
                style="@style/robboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:text="FTX"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/roboto_light"
                android:text=" 0 active vaults"
                android:textColor="@color/white"
                android:textSize="8sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="26dp"
                android:src="@drawable/ic_msg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="50dp"
                android:text="(12)"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/img_vaults">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img_bitmex" />

            <TextView
                style="@style/robboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="15dp"
                android:text="Bitmex"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="70dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/roboto_light"
                android:text=" 0 active vaults"
                android:textColor="@color/white"
                android:textSize="8sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="26dp"
                android:src="@drawable/ic_msg" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginEnd="50dp"
                android:text="(12)"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>

    </LinearLayout>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_add"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:onClick="btnAdd"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:theme="@style/algereya_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:neumorph_backgroundColor="#402C60"
        app:neumorph_shadowColorDark="#36132E"
        app:neumorph_shadowColorLight="#5A3054"
        app:neumorph_shadowElevation="2dp"
        app:neumorph_shapeType="flat"
        app:neumorph_strokeWidth="0dp" />

    <TextView
        style="@style/algereya_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add"
        app:layout_constraintEnd_toEndOf="@+id/btn_add"
        app:layout_constraintStart_toStartOf="@+id/btn_add"
        app:layout_constraintTop_toTopOf="@+id/btn_add" />
</androidx.constraintlayout.widget.ConstraintLayout>
